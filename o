import uuid
class Person:
    def __init__ (self,name,age,contact_number):
        self.name=name
        self.age=age
        self.contact_number=contact_number
    def set_details(self,name,age,contact_number):
        self.name=name
        self.age=age
        self.contact_number=contact_number
    def get_details(self):
        return f"Name: {self.name}, Age: {self.age}, contact: {self.contact_number}"
class Member(Person):
    def __init__ (self,name,age,contact_number,sport):
        super(). __init__(name,age,contact_number)
        self.membership_id=str(uuid.uuid4()).split("-")[0]
        self.sport=sport
        self.scores=[]
    def set_details(self,sport):
        self.sport=sport
        self.student_id=str(uuid.uuid4()).split("-")[0]
    def add_score(self,scores):
        self.grades.append(scores)
    def calculate_average_grade(self):
        if len(self.scores) == 0:
            return 0
        else:
            avg = sum(self.scores) / len(self.scores)
            return avg
    def get_member_summary(self):
        return f"Your details:{self.get_details()},Membership Id: {self.membership_id}, salary:{self.scores}"
class Coach(Person):
    def __init__ (self,name,age,contact_number,specialisation,salary):
        super(). __init__(name,age,contact_number)
        self.coach_id=str(uuid.uuid4()).split("-")[0]
        self.specialisation=specialisation
        self.salary=salary
        self.mentees=[]
    def set_details(self,specialisation,salary):
        self.specialisation=specialisation
        self.student_id=str(uuid.uuid4()).split("-")[0]
        self.salary=salary
    def add_mentee(self,mentee):
        print(f"coach {self.name} is now mentoring {mentee.name}")
        self.mentees.append(mentee)
    
    
    
